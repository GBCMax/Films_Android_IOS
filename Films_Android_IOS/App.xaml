<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Films_Android_IOS"
             x:Class="Films_Android_IOS.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="LabelBackgroundColor">Azure</Color>
            <!--<Font x:Key="CustomFont" FontFamily="CodaRegular.ttf"/>-->
            <Style x:Key="GridLabelStyle" TargetType="Label">
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="BackgroundColor" Value="{StaticResource LabelBackgroundColor}"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <!--<Setter Property="FontFamily" Value="{StaticResource CustomFont}"/>-->
                <Setter Property="FontSize" Value="14"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
